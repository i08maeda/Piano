<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 曲選択ボタン-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/frog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="カエルの歌"/>
        <Button
            android:id="@+id/lullaby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="子守歌"/>
    </LinearLayout>

    <!-- その他ボタン，メトロノーム-->
    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="スタート"/>
    <ImageView
        android:id="@+id/metronome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- 楽譜部分-->
    <ImageView
        android:id="@+id/score1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/score2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!-- ピアノ部分-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- 白鍵-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/c"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/white_key_color"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/d"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/white_key_color"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/e"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/white_key_color"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/f"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/white_key_color"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/g"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/white_key_color"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/a"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/white_key_color"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/h"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/white_key_color"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/high_c"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/white_key_color"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/high_d"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/white_key_color"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/high_e"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/white_key_color"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/high_f"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/white_key_color"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/high_g"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/white_key_color"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/high_a"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/white_key_color"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/high_h"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/white_key_color"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/high_d_c"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/white_key_color"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- 黒鍵-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/cis"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:background="@drawable/black_key_color"
                android:layout_weight="2"/>
            <Button
                android:id="@+id/dis"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:background="@drawable/black_key_color"
                android:layout_weight="2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="2"/>
            <Button
                android:id="@+id/fis"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:background="@drawable/black_key_color"
                android:layout_weight="2"/>
            <Button
                android:id="@+id/gis"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:background="@drawable/black_key_color"
                android:layout_weight="2"/>
            <Button
                android:id="@+id/ais"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:background="@drawable/black_key_color"
                android:layout_weight="2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="2"/>
            <Button
                android:id="@+id/high_cis"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:background="@drawable/black_key_color"
                android:layout_weight="2"/>
            <Button
                android:id="@+id/high_dis"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:background="@drawable/black_key_color"
                android:layout_weight="2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="2"/>
            <Button
                android:id="@+id/high_fis"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:background="@drawable/black_key_color"
                android:layout_weight="2"/>
            <Button
                android:id="@+id/high_gis"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:background="@drawable/black_key_color"
                android:layout_weight="2"/>
            <Button
                android:id="@+id/high_ais"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:background="@drawable/black_key_color"
                android:layout_weight="2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"/>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>